<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerifyOtp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="100sp"
            android:textColor="@color/primary5"
            android:text="@string/code"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/primary6"
            android:text="Verifaction"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:textColor="@color/primary5"
            android:text="optdesc"
            android:fontFamily="monospace"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="6dp"
            android:textColor="@color/primary6"
            android:text="+917720840636"
            android:fontFamily="monospace"
            android:layout_gravity="center"/>
        <com.chaos.view.PinView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:itemCount="6"
            android:id="@+id/pinview"
            app:itemWidth="40dp"
            android:height="40dp"
            android:layout_gravity="center"
            app:lineColor="@color/primary6"
            android:itemBackground="@color/white"
            android:layout_marginTop="30dp"
            style="@style/PinWidget.PinView"
            android:cursorVisible="true"
            android:inputType="number"
            app:cursorColor="@color/primary5"
            app:hideLineWhenFilled="true"
            app:itemRadius="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fff"
            android:id="@+id/timer"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/primary5"
            android:text="verify"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>